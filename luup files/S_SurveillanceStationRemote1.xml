<?xml version="1.0" encoding="utf-8"?>
<scpd xmlns="urn:schemas-upnp-org:service-1-0">
	<specVersion>
		<major>1</major>
		<minor>0</minor>
	</specVersion>
	<serviceStateTable>
		<stateVariable>
			<name>Protocol</name>
			<sendEventsAttribute>yes</sendEventsAttribute>
			<dataType>string</dataType>
			<defaultValue>http</defaultValue>
			<shortCode>protocol</shortCode>
		</stateVariable>
		<stateVariable>
			<name>Host</name>
			<sendEventsAttribute>yes</sendEventsAttribute>
			<dataType>string</dataType>
			<defaultValue>diskstation</defaultValue>
			<shortCode>host</shortCode>
		</stateVariable>
		<stateVariable>
			<name>Port</name>
			<sendEventsAttribute>yes</sendEventsAttribute>
			<dataType>string</dataType>
			<defaultValue>5000</defaultValue>
			<shortCode>port</shortCode>
		</stateVariable>
		<stateVariable>
			<name>UserName</name>
			<sendEventsAttribute>yes</sendEventsAttribute>
			<dataType>string</dataType>
			<shortCode>username</shortCode>
		</stateVariable>
		<stateVariable>
			<name>Password</name>
			<sendEventsAttribute>yes</sendEventsAttribute>
			<dataType>string</dataType>
			<shortCode>password</shortCode>
		</stateVariable>
		<stateVariable>
			<name>Record</name>
			<sendEventsAttribute>yes</sendEventsAttribute>
			<dataType>boolean</dataType>
			<defaultValue>0</defaultValue>
			<shortCode>record</shortCode>
		</stateVariable>
		<stateVariable>
			<name>Cameras</name>
			<sendEventsAttribute>yes</sendEventsAttribute>
			<dataType>string</dataType>
			<shortCode>cameras</shortCode>
		</stateVariable>
		<stateVariable>
			<name>ARG_cameraIds</name>
			<sendEventsAttribute>no</sendEventsAttribute>
			<dataType>string</dataType>
		</stateVariable>
	</serviceStateTable>
	<actionList>
		<action>
			<name>SetArmed</name>
			<argumentList>
				<argument>
					<name>newTargetValue</name>
					<direction>in</direction>
					<relatedStateVariable>Status</relatedStateVariable>
				</argument>
				<argument>
					<name>cameraIds</name>
					<direction>in</direction>
					<relatedStateVariable>ARG_cameraIds</relatedStateVariable>
				</argument>
			</argumentList>
		</action>
		<action>
			<name>SetRecordTarget</name>
			<argumentList>
				<argument>
					<name>newRecordTargetValue</name>
					<direction>in</direction>
					<relatedStateVariable>Record</relatedStateVariable>
				</argument>
				<argument>
					<name>cameraIds</name>
					<direction>in</direction>
					<relatedStateVariable>ARG_cameraIds</relatedStateVariable>
				</argument>
			</argumentList>
		</action>
		<action>
			<name>Update</name>
			<argumentList>
			</argumentList>
		</action>
	</actionList>
</scpd>
